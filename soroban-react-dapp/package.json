{
  "name": "soroban-dapp-boilerplate",
  "description": "Full-Stack DApp Boilerplate for Soroban Smart Contracts",
  "homepage": "",
  "author": "Benjamin Salon",
  "private": true,
  "workspaces": [
    "frontend",
    "contract"
  ],
  "engines": {
    "node": ">=18",
    "pnpm": "8"
  },
  "scripts": {
    "dev": "pnpm run --dir frontend dev",
    "build": "pnpm run --dir frontend build",
    "start": "pnpm run --dir frontend start",
    "node": "pnpm run --dir contracts node",
    "lint": "pnpm run -F '*' lint",
    "lint:fix": "pnpm run -F '*' lint:fix",
    "lint:format": "pnpm run -F '*' lint:format",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "lint-staged": "^15.0.2",
    "next": "^13.5.6",
    "simple-git-hooks": "^2.9.0",
    "typescript": "^5.2.2"
  }
}
